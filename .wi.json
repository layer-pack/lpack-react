{
  "default": {
    "rootFolder": "App",
    "scripts": {
      "start": "./etc/cli/start"
    }
  },
  "dev": {
    "rootFolder": "App",
    "scripts": {
      "start": "./etc/cli/start"
    },
    "commands": {
      "server": {
        "watch": "dist/api/App.server.js",
        "run": "node --inspect=[::]:9229 ./dist/api/App.server.js -p 9701",
        "forever": true
      },
      "api": {
        "clearBefore": "dist/api",
        "run": "wpi :api -w",
        "vars": {
          "DefinePluginCfg": {
            "__IS_DEV__": true
          }
        }
      },
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi-dev-server :www --hot --host 0.0.0.0",
        "vars": {
          "DefinePluginCfg": {
            "__IS_DEV__": true
          }
        }
      }
    }
  },
  "prod": {
    "rootFolder": "App",
    "scripts": {
      "start": "./etc/cli/start"
    },
    "commands": {
      "www": {
        "clearBefore": "dist/www",
        "run": "wpi :www",
        "vars": {
          "production": true
        }
      },
      "api": {
        "wait": "www",
        "clearBefore": "dist/api",
        "run": "wpi :api",
        "vars": {
          "production": true
        }
      },
      "server": {
        "wait": "api",
        "run": "node ./dist/api/App.server.js -p 8080",
        "forever": true
      }
    }
  },
  "www": "defaultBrowser",
  "defaultBrowser": {
    "rootFolder": "App",
    "config": "./etc/wp/webpack.config.www.js",
    "vars": {
      "targetDir": "dist/www",
      "DefinePluginCfg": {
        "__IS_SERVER__": false
      },
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      }
    },
    "scripts": {
      "start": "./etc/cli/start"
    }
  },
  "api": "defaultServer",
  "defaultServer": {
    "rootFolder": "App",
    "config": "./etc/wp/webpack.config.api.js",
    "vars": {
      "targetDir": "dist/api",
      "externals": true,
      "DefinePluginCfg": {
        "__IS_SERVER__": false
      }
    },
    "scripts": {
      "start": "./etc/cli/start"
    }
  },
  "defaultComponent": {
    "rootFolder": "Comp",
    "config": "./etc/wp/webpack.config.comp.js",
    "vars": {
      "externals": true,
      "targetDir": "dist",
      "rootAlias": "Comp"
    },
    "scripts": {
      "start": "./etc/cli/start"
    }
  },
  "defaultSamples": {
    "rootFolder": "Comp",
    "config": "./etc/wp/webpack.config.samples.js",
    "vars": {
      "targetDir": "dist/samples",
      "rootAlias": "Comp",
      "babelPreset": {
        "targets": {
          "browsers": "> 0.25%, not dead, safari >= 6, ios >= 6, chrome >= 52"
        },
        "loose": true
      }
    },
    "scripts": {
      "start": "./etc/cli/start"
    }
  }
}